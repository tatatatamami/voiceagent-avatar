{
  "components": {
    "schemas": {
      "OrderInfo": {
        "properties": {
          "Name": {
            "description": "Product name",
            "type": "string"
          },
          "OrderId": {
            "description": "Order ID",
            "type": "string"
          },
          "Price": {
            "description": "Unit price",
            "format": "float",
            "type": "number"
          },
          "ProductId": {
            "description": "Product ID",
            "type": "integer"
          },
          "Quantity": {
            "description": "Quantity ordered",
            "type": "integer"
          },
          "Total": {
            "description": "Total order amount",
            "format": "float",
            "type": "number"
          }
        },
        "required": [
          "OrderId",
          "ProductId",
          "Name",
          "Quantity",
          "Price",
          "Total"
        ],
        "type": "object"
      },
      "Product": {
        "properties": {
          "Category": {
            "description": "Product category",
            "type": "string"
          },
          "Price": {
            "description": "Product price",
            "format": "float",
            "type": "number"
          },
          "ProductDescription": {
            "description": "Product description",
            "type": "string"
          },
          "ProductName": {
            "description": "Product name",
            "type": "string"
          },
          "id": {
            "description": "Product ID",
            "type": "integer"
          },
          "imageurl": {
            "description": "Product image URL",
            "type": "string"
          }
        },
        "required": [
          "id",
          "ProductName",
          "Price",
          "Category"
        ],
        "type": "object"
      }
    }
  },
  "info": {
    "contact": {
      "email": "contact@contoso.com",
      "name": "API Support"
    },
    "description": "A RESTful API for managing fashion retail products and orders",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    },
    "title": "Contoso Retail Fashion API",
    "version": "1.0"
  },
  "openapi": "3.0.2",
  "paths": {
    "/api/orders/": {
      "get": {
        "operationId": "orderProduct",
        "parameters": [
          {
            "description": "Product ID",
            "in": "query",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "description": "Quantity",
            "in": "query",
            "name": "quantity",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrderInfo"
                }
              }
            },
            "description": "Success"
          },
          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            },
            "description": "Bad Request"
          }
        },
        "summary": "Order a product based on id and quantity",
        "tags": [
          "orders"
        ]
      }
    },
    "/api/products/category/{category}": {
      "get": {
        "operationId": "searchProductsByCategory",
        "parameters": [
          {
            "description": "Product category",
            "in": "path",
            "name": "category",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  },
                  "type": "array"
                }
              }
            },
            "description": "Success"
          },
          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            },
            "description": "Bad Request"
          }
        },
        "summary": "Search products by category",
        "tags": [
          "products"
        ]
      }
    },
    "/api/products/search": {
      "get": {
        "operationId": "searchProductsByCategoryAndPrice",
        "parameters": [
          {
            "description": "Product category",
            "in": "query",
            "name": "category",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "description": "Maximum price",
            "in": "query",
            "name": "price",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  },
                  "type": "array"
                }
              }
            },
            "description": "Success"
          },
          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            },
            "description": "Bad Request"
          }
        },
        "summary": "Search products by category and maximum price",
        "tags": [
          "products"
        ]
      }
    },
    "/health": {
      "get": {
        "operationId": "healthCheck",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "timestamp": {
                      "type": "string"
                    }
                  },
                  "type": "object"
                }
              }
            },
            "description": "Health status"
          }
        },
        "summary": "Health check endpoint",
        "tags": [
          "system"
        ]
      }
    }
  },
  "servers": [
    {
      "description": "Development server",
      "url": "http://localhost:8000"
    }
  ]
}